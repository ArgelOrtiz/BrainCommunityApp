    package="com.example.braincommunity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/brain_logo_blue"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/brain_logo_blue"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Drawer.MainActivity"

            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Profile.LoginActivity"/>
        <activity android:name=".Post.MyPostActivity"/>
        <activity android:name=".Profile.ProfileActivity"/>
        <activity android:name=".Profile.EditProfileActivity"/>
        <activity android:name=".Profile.RegisterActivity"/>
        <activity android:name=".Post.PostViewActivity"/>
        <activity android:name=".Post.CreatePostActivity"/>
        <activity android:name=".Profile.ForgotPasswordActivity"/>


    </application>

</manifest>